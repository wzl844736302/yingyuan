<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/member_activity_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/log_icon_phone" />

                <EditText
                    android:id="@+id/login_number_ed"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:inputType="number"
                    android:textColor="#ffff"
                    android:digits="0123456789"
                    android:ems="11"
                    android:hint="手机号"
                    android:imeOptions="actionNext"
                    android:paddingLeft="50dp"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/log_icon_lock" />

                <EditText
                    android:id="@+id/login_password_ed"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#ffff"
                    android:background="@null"
                    android:ems="11"
                    android:inputType="textPassword"
                    android:hint="登录密码"
                    android:imeOptions="actionNext"
                    android:paddingLeft="50dp"
                    android:textColorHint="#eeeeee" />

                <CheckBox
                    android:id="@+id/login_eye_cb"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:background="@drawable/log_icon_eye_default" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_pwd"
                    android:textColor="#fff"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/MyCheckBox"
                    android:text="记住密码"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/zd_login"
                    android:layout_toRightOf="@+id/save_pwd"
                    android:textColor="#fff"
                    android:theme="@style/MyCheckBox"
                    android:text="自动登录"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_regirect_tiao"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="0dp"
                    android:text="快速注册"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/member_activity_login_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:background="@drawable/log_but_bg"
            android:text="登录"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号快速登录"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff" />
        </LinearLayout>

        <ImageView
            android:id="@+id/weixin_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:src="@drawable/log_icon_weixin" />

    </LinearLayout>
</LinearLayout>