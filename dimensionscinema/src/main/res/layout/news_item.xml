<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_hide1111"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/activity_infor_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购票信息"
        android:textColor="#333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activity_infor_item_neirong"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="false"
        android:text="系统通知"
        android:textColor="#333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/activity_infor_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_infor_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="2015"
        android:textColor="#333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_yyt"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_infor_item_neirong"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#ddd" />
</RelativeLayout>
