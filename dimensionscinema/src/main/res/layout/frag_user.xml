<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ming_remind"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/my_icon_remind_default" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/msimUser"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            fresco:roundAsCircle="true"/>
        <TextView
            android:id="@+id/textLoginRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="登录/注册"
            android:textColor="#fff"
            android:textSize="18sp" />
        <Button
            android:id="@+id/mbt"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:text="签到"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_searchs"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:background="@drawable/me_back">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:id="@+id/btn_msg_mine"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/wodexinxi"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_messiage_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:background="@drawable/me_back">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:id="@+id/btn_like_mine"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/wodeguanzhu"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_attention_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:id="@+id/btn_rccord_mine"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/goupiaojilu"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_rccord_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:background="@drawable/me_back">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_feedback_mine"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/yijianfankui"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_feedback_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/btn_version_mine"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/zuixinbanben"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_version_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="最新版本"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_tuichu_mine"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tuichudenglu"
                android:layout_width="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_logout_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
